	 <div></div>
	 <%= link_to "View", applicant_internship_path(@applicant, internship) %>
	 <% if !current_user.nil? && !current_user.admin? && current_user?(@applicant)%>
	 	 | <%= link_to "Edit", edit_applicant_internship_path(@applicant, internship) %> 
