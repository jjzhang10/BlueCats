<li class="list-group-item container">
	
	 <% time=internship.created_at.strftime("%d %b %Y")+":" %>
	 <% application='Counseling Internship' %>
	 <% if internship.counseling_student %>
		<% application += " (Counseling Student)" %>
	 <% end %>
	 <% if internship.LPC_intern %>
		<% application += " (LPC Intern)" %>
	 <% end %>
	 <span><%= time %></span>
	 <span><%= application %></span>
	 <br>
	 <%= link_to "View", applicant_internship_path(@applicant, internship) %>
	 <% if !current_user.nil? && !current_user.admin? && current_user?(@applicant) && !internship.submited %>
	 	 | <%= link_to "Edit", edit_applicant_internship_path(@applicant, internship) %> 
	 	 | <%= link_to "Delete", applicant_internship_path(@applicant, internship), method: :delete, data: {confirm: "Are you sure?"} %>
	 	 <%= link_to "Submit", change_status_applicant_internship_path(@applicant, internship, status: {submited: true}), method: :put, class: 'pull-right btn btn-warning' %>
	 <% end %>
	
</li>
