<script>
	window.onload=function(){
		var imgs=document.getElementsByTagName("img");
		for (var i=0;i<imgs.length;i++){
			imgs[i].onmouseover=function(e){
				var img=e.target;
				if (img.id==0){
					return;
				}
				if (img.id<3){
					img.id++;
				}else{
					img.id=1;
				}		
				var pic_src="/assets/"+img.id+".png";
				img.src=pic_src;
			};
		}
	}
</script>



