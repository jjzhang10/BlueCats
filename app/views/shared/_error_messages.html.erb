<% if !@applicant.nil? && @applicant.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Error!
    </div>
    <ul>
    <% @applicant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

